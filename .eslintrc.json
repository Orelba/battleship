{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": "airbnb-base",
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": [
        "webpack.*",
        "babel.config.js",
        "jest.config.js",
        "dist"
    ],
    "rules": {
        "no-console": "off",
        "semi": 0,
        "linebreak-style": 0 // NPM .json files use LF while the rest of the project uses CRLF
    }
}